{
"manifest_version":3,
"name":"ClearIt",
"version":"1.0",
"description":" An extension that deletes unwamted mail",
"permission":[
"storage",
"activeTab" // perm tells the extension ask for permiss on what it needs to do 
],
"background": {
  "service_worker": "background.js"
},
"action": {
  "default_popup": "popup.html",
  "default_icon": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
},
"icons": {
  "16": "icons/icon16.png",
  "48": "icons/icon48.png",
  "128": "icons/icon128.png"
}

}